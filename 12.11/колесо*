c=int(input('3 колесо'))
d=int(input('4 колесо'))
if (a>6):
    print('Замени №1 от греха подальше')
if (b>6):
    print('Замени №2 от греха подальше')
if (c>6):
    print('Замени №3 от греха подальше')
if (d>6):
    print('Замени №4 от греха подальше')
if (a<6) and (b<6) and (c<6) and (d<6):
      print('Всё хорошо, ехаем')
